{
  "compilerOptions": {
    "declaration": true,
    "module": "ES2015",
    "target": "ES2015",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./dist",
    "newLine": "lf"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
